<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render 'post', post: post %> <!-- 'post' 部分テンプレートにローカル変数 `post` を渡す -->
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>


<%= link_to "New post", new_post_path %>
